# Pipeline Whisperer Environment Variables
# Copy this file to .env and fill in your actual credentials

# === Lightfield CRM ===
LIGHTFIELD_API_KEY=your_lightfield_api_key_here
LIGHTFIELD_BASE_URL=https://api.lightfield.ai/v1
LIGHTFIELD_WEBHOOK_SECRET=your_webhook_secret_here

# === stackAI ===
STACKAI_API_KEY=your_stackai_api_key_here
STACKAI_PROJECT_ID=your_project_id_here

# === Truefoundry ===
TRUEFOUNDRY_API_KEY=your_truefoundry_api_key_here
TRUEFOUNDRY_WORKSPACE=your_workspace_id_here
TRUEFOUNDRY_BASE_URL=https://api.truefoundry.com

# === Sentry ===
SENTRY_DSN_NEXTJS=https://your_nextjs_dsn@sentry.io/project_id
SENTRY_DSN_PYTHON=https://your_python_dsn@sentry.io/project_id
SENTRY_ORG=your_org_name
SENTRY_PROJECT=pipeline-whisperer
SENTRY_ENVIRONMENT=development

# === Redpanda / Kafka ===
# For local development (Docker Compose)
REDPANDA_BROKERS=localhost:19092
# For cloud Redpanda (uncomment and fill if using cloud)
# REDPANDA_BROKERS=seed-xyz.cloud.redpanda.com:9092
# REDPANDA_SASL_USERNAME=your_username
# REDPANDA_SASL_PASSWORD=your_password
# REDPANDA_SASL_MECHANISM=SCRAM-SHA-256

# Kafka Topics
KAFKA_TOPIC_LEADS_RAW=leads.raw
KAFKA_TOPIC_LEADS_SCORED=leads.scored
KAFKA_TOPIC_OUTREACH_EVENTS=outreach.events

# === Database ===
# For local development (Docker Compose PostgreSQL)
DATABASE_URL=postgresql://pipeline_user:pipeline_pass@localhost:5432/pipeline_db
# For SQLite (simpler demo option)
# DATABASE_URL=sqlite:///./pipeline.db

# === Application Settings ===
# FastAPI
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Next.js
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
PORT=3000

# === Demo / Development ===
DEMO_MODE=true
SIMULATE_LIGHTFIELD=true
LOG_LEVEL=INFO
